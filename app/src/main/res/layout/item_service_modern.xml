<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="12dp"
    app:cardMaxElevation="16dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="#FFFFFF"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Border Frame -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="#E8E8E8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp"
                android:gravity="center_vertical|top">

                <!-- Left Side: Service Icon -->
                <LinearLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/service_icon_background"
                    android:layout_marginEnd="16dp"
                    android:elevation="2dp">

                    <TextView
                        android:id="@+id/serviceIconText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BC"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <!-- Middle: Service Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/serviceNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Basic Hair Cut"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:lineSpacingMultiplier="1.1" />

                    <!-- Category -->
                    <TextView
                        android:id="@+id/categoryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hair"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/category_background"
                        android:paddingHorizontal="9dp"
                        android:paddingVertical="3dp"
                        android:layout_marginTop="6dp" />

                    <!-- Duration (below category) -->
                    <TextView
                        android:id="@+id/durationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60 mins"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:drawableStart="@drawable/ic_schedule"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"
                        android:drawableTint="#667eea"
                        android:background="@drawable/duration_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:id="@+id/detailsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Professional hair cutting service"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="6dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:lineSpacingMultiplier="1.2"
                        android:visibility="visible" />

                </LinearLayout>

                <!-- Right Side: Price and Book Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/priceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM20.00"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#667eea"
                        android:layout_marginBottom="12dp"
                        android:gravity="end" />

                    <Button
                        android:id="@+id/bookButton"
                        android:layout_width="85dp"
                        android:layout_height="36dp"
                        android:text="Book"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/book_button_background"
                        android:elevation="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="36dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>
