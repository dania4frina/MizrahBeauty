<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Booking ID and Service Name - Main Header -->
        <TextView
            android:id="@+id/bookingHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#12 - rebonding | 2025-10-01 13:00:00.0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="4dp" />

        <!-- Status and Cancel Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ACTIVE"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Cancel"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Customer Email (smaller, secondary info) -->
        <TextView
            android:id="@+id/customerEmailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer: customer@example.com"
            android:textSize="12sp"
            android:textColor="@color/text_light"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <!-- Notes (if available) -->
        <TextView
            android:id="@+id/notesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes: Special requirements"
            android:textSize="12sp"
            android:textColor="@color/text_light"
            android:textStyle="italic"
            android:visibility="gone" />

        <!-- Hidden fields for backwards compatibility -->
        <TextView
            android:id="@+id/serviceNameText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/appointmentTimeText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
